mixin range-slider(title, form)
  .range-slider
    .label-cta= title
    .range-slider__num
      input.range-slider__num-input(type="hidden" name="min-price" form= form value="5000")
      input.range-slider__num-input(type="hidden" name="max-price" form= form value="10000")
      .range-slider__num-txt
        span.range-slider__num-txt-min 5 000 ₽
        span - 
        span.range-slider__num-txt-max 10 000 ₽
    .range-slider__visual
      .range-slider__visual-left(style="width:20%")
      .range-slider__visual-range(style="width:50%")
      .range-slider__visual-right(style="width:30%")
      


