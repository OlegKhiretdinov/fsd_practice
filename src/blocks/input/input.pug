mixin input(options)
  if (options.id && 'txtlabel' in options)
    label(for= options.id
    class=options.classlabel
    )= options.txtlabel
  input(type= options.type
    name= options.name
    form= options.form
    class=options.classinput
    id= options.id
    placeholder= options.placeholder
    )

