include ../input/input.pug

mixin expand-triger(labelClass, labelText)
  +input(
    {
      type: "checkbox",
      id: "triger",
      txtlabel: labelText,
      classinput: "expand-triger",
      classlabel: `expand-triger__label expand-triger__label_${labelClass}`,
    }
  )



