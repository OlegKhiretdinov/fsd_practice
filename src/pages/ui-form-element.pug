            },
            {
            txt: "Можно с питомцами",
            class: ""
            }
          )
        div.ui-kit__section-inner_m 
          +checkbox(
            {
              name: "cbbox",
              value: "guest",
              id: "opt-guest",
              class: "",
              checked: 1,
            },
            {
            txt: "Можно пригласить гостей (до 10 человек)",
            class: ""
            }
          )
        div.ui-kit__section-inner_m
          +radiobutton(
            {
              name: "gender",
              value: "man",
              id: "man",
              class: "",
              checked: 1,
            },
            {
            txt: "Мужчина",
            class: ""
            }
          )
          +radiobutton(
            {
              name: "gender",
              value: "woman",
              id: "woman",
              class: "",
              checked: 0,
            },
            {
            txt: "Женщина",
            class: "more label class"
            }
          )
        div.ui-kit__section-inner_m
          +toggle(
            {
              name: "toggle1",
              value: "sale",
              id: "spec-offer-da",
              class: "",
              checked: 1,
            },
            {
            txt: "Получать спец предложения",
            class: ""
            }
          )
          +toggle(
            {
              name: "toggle2",
              value: "sale",
              id: "spec-offer-net",
              class: "",
              checked: 0,
            },
            {
            txt: "Получать спец предложения",
            class: ""
            }
          )
        div.ui-kit__section-inner_m
          +like-button(0,2)
        div.ui-kit__section-inner_m
          +like-button(1,12)
        div.ui-kit__section-inner_m.ui-kit__rate-line
          +rate-button(4)
          +rate-button(5)
