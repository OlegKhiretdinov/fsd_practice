html(lang="ru")
  head
    include ../blocks/head/head.pug
    title ui form element
  body.page
    include ../blocks/ui-kit/__header/ui-kit__header.pug
    include ../blocks/input/input.pug
    include ../blocks/dropdown-input/dropdown-input.pug
    include ../blocks/checkbox/checkbox.pug
    include ../blocks/radiobutton/radiobutton.pug
    include ../blocks/toggle/toggle.pug
